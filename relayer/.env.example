# ============================================
# SybilShield Relayer Environment Configuration
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit .env file with real secrets!

# ============================================
# Server Configuration
# ============================================
PORT=5000
NODE_ENV=development
LOG_LEVEL=debug

# ============================================
# Aleo Blockchain Configuration
# ============================================
# Aleo RPC endpoint for blockchain interactions
ALEO_RPC_URL=https://api.explorer.provable.com/v2

# Issuer's Aleo private key (for signing badge issuance transactions)
# Generate with: leo account new
# ⚠️ KEEP THIS SECRET - Never share or commit!
ISSUER_PRIVATE_KEY=APrivateKey1zkp8CZNn3yeCseEtxuVPbDCwSyhGW6yZKUYKfgXmcpoGPWH

# Issuer's Aleo address (public, derived from private key)
ISSUER_ADDRESS=aleo1s3ws5tra87fjycnjrwsjcrnw2qxr8jfqqdugnf0xzqqw29q9m5pqem2u4t

# ============================================
# Verification Provider APIs
# ============================================
# Proof of Humanity API
POH_API_URL=https://api.poh.dev/v1
POH_API_KEY=your_poh_api_key_here

# Worldcoin API
WORLDCOIN_API_URL=https://developer.worldcoin.org/api/v1
WORLDCOIN_API_KEY=your_worldcoin_api_key_here
WORLDCOIN_APP_ID=app_your_app_id

# ============================================
# Rate Limiting
# ============================================
# Requests per minute per IP
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# ============================================
# Security
# ============================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://sybilshield.xyz

# JWT secret for session management (optional)
JWT_SECRET=your_jwt_secret_here

# ============================================
# Demo Mode
# ============================================
# Set to 'true' to use mock verification (for development)
DEMO_MODE=true

# ============================================
# Database (Optional - for persistence)
# ============================================
# DATABASE_URL=postgresql://user:password@localhost:5432/sybilshield
# REDIS_URL=redis://localhost:6379
